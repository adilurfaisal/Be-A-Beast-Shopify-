{% schema %}
  {
    "name": "Featured Collection",
    "tag": "section",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "collection",
        "id": "collection",
        "label": "Collection"
      },
      {
        "type": "select",
        "id": "color_scheme",
        "label": "Color Scheme",
        "options": [
          {
            "value": "dark",
            "label": "Dark"
          },
          {
            "value": "light",
            "label": "Light"
          }
        ],
        "default": "dark"
      },
      {
        "type": "range",
        "id": "slide_to_show",
        "min": 1,
        "max": 4,
        "step": 1,
        "label": "Slide to show",
        "default": 4
      }
    ],
    "presets": [
      {
        "name": "Featured Collection - Alternative",
        "settings": {}
      }
    ]
  }
{% endschema %}

