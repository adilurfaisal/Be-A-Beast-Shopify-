{{ 'featured-collection-alternative.css' | asset_url | stylesheet_tag }}
<!-- section/featured-product-alternative.liquid -->
<style>
  @media only screen and (min-width: 750px) {
    #featured__collection .swiper{
      padding: 0 16px !important;
      margin-left: -16px;
    }
  }
  
  #featured__collection .swiper{
    margin-left: -70px;
  }
  
  .slide-button-next{
  	right: -50px !important;
  }
  .slide-button-prev{
  	left: -50px !important;
  }
</style>
<div id="featured__collection" class="section--margin-default{% if section.settings.color_scheme == 'dark' %} color--scheme--dark{% else %} color--scheme--light{% endif %}">
  <div class="page-width-tablet">
    <div class="grid grid--1-col">
      <div class="grid__item">
        <div class="section--top-wrapper">
          <div class="section--heading-wrapper">
            <h2 class="section--heading h1">{{ section.settings.heading }}</h2>
          </div>
          <div class="collection--link">
            {% if section.settings.collection.url != blank %}
              <a href="{{ section.settings.collection.url }}" class="button button--primary skewed-border button-custom">View All</a>
            {% endif %}
          </div>
          
        </div>
        <div class="section--bottom-wrapper">
          {% assign collection = section.settings.collection.products %}
          <fc-slider data-slide-to-show="{{ section.settings.slide_to_show }}">
            <div class="swiper">
              <div class="swiper-wrapper">
                {% for product in collection %}
                  <div class="swiper-slide">
                    {% render 'product-card-alternative', product: product %}
                  </div>
                {% endfor %}
              </div>
            </div>
