{% comment %}
{%- liquid
  assign product_id = settings.product_id | times: 1
  assign products_obj = collections.all.products | where: 'id', product_id
  echo products_obj[0].handle
-%}
{% endcomment %}

<div class="{{ section.id }} size--guide-container">
  <div class="page-width-tablet">
    <div class="section--heading">
      <h1>{{ page.title }}</h1>
    </div>
    {% assign products = page.metafields.product.type.value %}
    {% for product in products %}
      {{ product.type }}
    {% endfor %}
  </div>
</div>

{% schema %}
  {
    "name": "Size Guide",
    "tag": "section",
    "settings": []
  }
{% endschema %}

