<style>

.share-btn .main svg{
	transition: all 500ms;
}

.share-btn .main{
	background: none;
	border: none;
    font-size: 1.4rem;
    min-height: 2.4rem;
    align-items: center;
    color: #000000;
    margin-left: 0;
    padding-left: 0;
    box-sizing: content-box;
	cursor: pointer;
	display: flex;
}

.share-btn .main .share{
	display: block;
	opacity: 1;
	float: left;
	fill: #000000;
}

.share-btn .main .share,
.share-btn .main .close
{
	position: absolute;
	float: left;
	fill: #000000;
	transition: all 300ms;
}

.share-btn.show .main .share,
.share-btn .main .close{
	opacity: 0;
	transform: rotate(90deg) scale(0);
}
.share-btn .main .share,
.share-btn.show .main .close{
	opacity: 1;
	transform: rotate(0) scale(1);
}

.share-btn .main .label{
	margin-left: 30px;
	font-size: 18px;
	font-style: normal;
	font-weight: 700;
	text-transform: uppercase;
}

.share-btn .shareButtons .shareButton{
	cursor: pointer;
    border: none;
    border-radius: 50%;
    background: rgba(0,0,0,0);
    padding: 10px;
    overflow: hidden;
    outline: none;
    margin: 5px;
    width: 24px;
    height: 24px;
    box-sizing: content-box;
    transition: all 200ms;
    position: relative;
    opacity: 1;
    transform: scale(1);
    box-shadow: 0px 0px 3px rgb(0 0 0 / 70%);
}

.share-btn.show .shareButtons .shareButton:hover{
	opacity: 0.5;
}

.share-btn .shareButtons .shareButton{
	width: 0;
    height: 0;
    overflow: hidden;
    opacity: 0;
    transform: scale(0);
	transition-delay: 100ms;
	transition: all 200ms;
}

.share-btn.show .shareButtons .shareButton{
    opacity: 1;
	width: 24px;
	height: 24px;
	transform: scale(1);
}


</style>

